<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#9C27B0"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/welldone_image"/>


    <TextView
        android:id="@+id/correct"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct Answers"
        android:background="#8BE91E"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/wrong"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrong Answers"
        android:background="#CE463C"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/total"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Answer"
        android:background="#EBD726"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>


    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circularProgreebar"
            app:cpb_background_progressbar_color="#DC2517"
            app:cpb_background_progressbar_width="12dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="5"
            app:cpb_progressbar_color="#1BBD22"
            app:cpb_progressbar_width="12dp"
            app:cpb_round_border="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:layout_centerInParent="true"
            android:text="3"
            android:textColor="#41EB48"
            android:textSize="50sp"
            android:textStyle="bold"/>






    </RelativeLayout>
    <Button
        android:id="@+id/home"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:backgroundTint="@color/black"/>







</LinearLayout>